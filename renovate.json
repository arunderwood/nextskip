{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": false,
  "prHourlyLimit": 10,
  "recreateClosed": true,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Docker images - disable version pinning, keep existing tag format",
      "matchDatasources": ["docker"],
      "pinDigests": false,
      "separateMinorPatch": false
    },
    {
      "description": "Vaadin ecosystem - group plugin + BOM and run postUpgradeTasks",
      "matchManagers": ["gradle", "gradle-wrapper"],
      "groupName": "Vaadin",
      "postUpgradeTasks": {
        "commands": ["./gradlew vaadinPrepareFrontend --no-daemon"],
        "fileFilters": ["package.json", "package-lock.json"],
        "executionMode": "update"
      },
      "matchPackageNames": ["/^com\\.vaadin/"]
    },
    {
      "description": "Vaadin-controlled npm packages - ignore (synced via gradle)",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "react",
        "react-dom",
        "react-router",
        "react-router-dom",
        "lit",
        "vite",
        "typescript",
        "@vitejs/plugin-react",
        "@types/react",
        "@types/react-dom",
        "@babel/preset-react",
        "vite-plugin-checker",
        "/^@vaadin//",
        "/^workbox-/"
      ],
      "enabled": false
    },
    {
      "description": "Disable GitHub Actions - managed by Dependabot",
      "matchManagers": ["github-actions"],
      "enabled": false
    }
  ]
}
