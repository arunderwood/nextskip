{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": false,
  "prHourlyLimit": 0,
  "recreateWhen": "always",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Docker - disable all updates (manually managed)",
      "matchManagers": ["docker", "dockerfile"],
      "enabled": false
    },
    {
      "description": "Checkstyle - group all versions into single PR",
      "matchManagers": ["gradle"],
      "matchPackageNames": ["com.puppycrawl.tools:checkstyle"],
      "groupName": "checkstyle",
      "separateMajorMinor": false,
      "separateMinorPatch": false
    },
    {
      "description": "Vaadin ecosystem - group plugin + BOM and run postUpgradeTasks",
      "matchManagers": ["gradle", "gradle-wrapper"],
      "groupName": "Vaadin",
      "postUpgradeTasks": {
        "commands": [
          "install-tool java 25.0.1+8.0.LTS",
          "install-tool node 24.12.0",
          "./gradlew vaadinPrepareFrontend --no-daemon",
          "npm install --package-lock-only"
        ],
        "fileFilters": ["**/**"],
        "executionMode": "branch"
      },
      "matchPackageNames": ["/^com\\.vaadin/"]
    },
    {
      "description": "Vaadin-controlled npm packages - ignore (synced via gradle)",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "react",
        "react-dom",
        "react-router",
        "react-router-dom",
        "lit",
        "vite",
        "typescript",
        "@vitejs/plugin-react",
        "@types/react",
        "@types/react-dom",
        "@babel/preset-react",
        "vite-plugin-checker",
        "/^@vaadin//",
        "/^workbox-/"
      ],
      "enabled": false
    },
    {
      "description": "Disable GitHub Actions - managed by Dependabot",
      "matchManagers": ["github-actions"],
      "enabled": false
    }
  ]
}
